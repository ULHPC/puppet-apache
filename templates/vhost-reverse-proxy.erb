<% if comment != "" -%>
    ##### <%= comment %>
<% end -%>
<% if target_url != "" -%>
    ProxyPass <%= source_path %> <%= target_url %> 
    ProxyPassReverse <%= source_path %> <%= target_url %> 
<% end -%>
    <Proxy <%= target_url%>/*>
<% if allow_from == [] -%>
        Order         allow,deny
        Allow from    all
<% else -%>
        Order Deny,Allow
        Deny from all
        # /!\ List here the authorized IP for accessing <%= source_path %>
<% allow_from.each do |ipaddr| -%>
        Allow from <%= ipaddr %>
<% end -%>
<% end -%>
    </Proxy>
    # End of configuration of <%= source_path %>
