<% if comment != "" -%>
    ##### <%= comment %>
<% end -%>
<% if diralias != "" -%>
    Alias <%= diralias %> <%= dirname %>
<% end -%>
    <Directory <%= dirname %>>
        Options       <%= options %>
<% if allow_from == [] -%>
        Order         allow,deny
        Allow from    all
<% else -%>
        Order Deny,Allow
        # /!\ List here the authorized IP for accessing <%= dirname %>
<% allow_from.each do |ipaddr| -%>
        Allow from <%= ipaddr %>
<% end -%>
        Deny from all
<% end -%>
    </Directory>
    # End of configuration of <%= dirname %>
